---
type Variant = "neutral" | "outline";

interface Props {
  variant?: Variant;
  class?: string;
}

const { variant = "neutral", class: className } = Astro.props;

const variantClassByName: Record<Variant, string> = {
  neutral: "border border-border bg-muted-subtle text-text-muted",
  outline: "border border-border-strong bg-surface-elevated text-text-muted",
};
---

<span
  class:list={[
    "inline-flex min-h-11 items-center rounded-full px-4 text-sm font-medium leading-[22px]",
    variantClassByName[variant],
    className,
  ]}
>
  <slot />
</span>
