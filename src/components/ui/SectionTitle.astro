---
interface Props {
  eyebrow?: string;
  title: string;
  description?: string;
  subtitle?: string;
  align?: "left" | "center";
}

const { eyebrow, title, description, subtitle, align = "left" } = Astro.props;
const alignmentClass = align === "center" ? "text-center" : "text-left";
const resolvedDescription = description ?? subtitle;
---

<div class:list={["max-w-3xl", alignmentClass]}>
  {
    eyebrow && (
      <p class="font-sans text-xs font-medium uppercase tracking-wider text-primary/80">
        {eyebrow}
      </p>
    )
  }
  <h2
    class:list={[
      "font-serif text-h2 font-normal tracking-[0.2px] text-text md:text-h2-desktop",
      eyebrow ? "mt-2" : "",
    ]}
  >
    {title}
  </h2>
  {
    resolvedDescription && (
      <p class="mt-4 text-body text-text-muted">{resolvedDescription}</p>
    )
  }
</div>
