---
interface Props {
  eyebrow?: string;
  title: string;
  description?: string;
  subtitle?: string;
  align?: "left" | "center";
}

const { eyebrow, title, description, subtitle, align = "left" } = Astro.props;
const alignmentClass = align === "center" ? "text-center" : "text-left";
const resolvedDescription = description ?? subtitle;
---

<div class:list={["max-w-3xl", alignmentClass]}>
  {
    eyebrow && (
      <p class="text-sm font-semibold leading-[22px] text-primary-700">
        {eyebrow}
      </p>
    )
  }
  <h2
    class:list={[
      "text-[28px] font-bold leading-[1.286] tracking-tight text-text",
      eyebrow ? "mt-2" : "",
    ]}
  >
    {title}
  </h2>
  {
    resolvedDescription && (
      <p class="mt-3 text-base leading-[26px] text-text-secondary">
        {resolvedDescription}
      </p>
    )
  }
</div>
