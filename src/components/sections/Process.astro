---
import Container from "@/components/ui/Container.astro";
import SectionTitle from "@/components/ui/SectionTitle.astro";
import { site } from "@/lib/content";
---

<section class="bg-slate-100 py-14 sm:py-20">
  <Container>
    <SectionTitle title={site.process.title} />
    <div class="mt-10 grid gap-6 md:grid-cols-3">
      {
        site.process.steps.map((step) => (
          <article class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
            <h3 class="text-lg font-semibold text-blue-900">{step.title}</h3>
            <p class="mt-3 text-sm text-slate-700">{step.description}</p>
          </article>
        ))
      }
    </div>
  </Container>
</section>
