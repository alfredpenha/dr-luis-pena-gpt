---
import Section from "@/components/ui/Section.astro";
import SectionTitle from "@/components/ui/SectionTitle.astro";
import { site } from "@/lib/content";
---

<Section variant="muted" className="py-12 md:py-16">
  <SectionTitle title={site.process.title} />
  <div class="mt-6 grid gap-4 md:mt-8 md:gap-6 md:grid-cols-3">
    {
      site.process.steps.map((step) => (
        <article class="rounded-xl border border-border/30 bg-surface p-5 shadow-[0_2px_8px_rgba(0,0,0,0.04)]">
          <h3 class="font-serif text-h3 font-medium text-text md:text-h3-desktop">
            {step.title}
          </h3>
          <p class="mt-4 text-secondary text-text-muted">
            {step.description}
          </p>
        </article>
      ))
    }
  </div>
</Section>
