---
import Container from "@/components/ui/Container.astro";
import SectionTitle from "@/components/ui/SectionTitle.astro";
import { site } from "@/lib/content";
---

<section class="bg-muted py-14 sm:py-20">
  <Container>
    <SectionTitle title={site.process.title} />
    <div class="mt-10 grid gap-6 md:grid-cols-3">
      {
        site.process.steps.map((step) => (
          <article class="rounded-2xl border border-border bg-surface-elevated p-6 shadow-sm">
            <h3 class="font-serif text-h3 font-medium text-text md:text-h3-desktop">
              {step.title}
            </h3>
            <p class="mt-4 text-secondary text-text-muted">
              {step.description}
            </p>
          </article>
        ))
      }
    </div>
  </Container>
</section>
