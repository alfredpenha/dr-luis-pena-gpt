---
import { Picture } from "astro:assets";
import Container from "@/components/ui/Container.astro";
import Card from "@/components/ui/Card.astro";
import { site } from "@/lib/content";
import { getPictureProps } from "@/lib/images";
---

<section class="bg-slate-50 py-14 sm:py-20">
  <Container>
    <div class="grid grid-cols-1 gap-6 lg:grid-cols-3">
      {
        site.clinicGallery.map((item) => (
          <Card padding="sm" class="fade-in-soft">
            <div class="aspect-[16/10] overflow-hidden rounded-card">
              <Picture
                {...getPictureProps(item.srcKey, item.alt, "gallery")}
                class="size-full object-cover"
              />
            </div>
            <p class="mt-3 text-sm leading-[22px] text-muted-700">
              {item.caption}
            </p>
          </Card>
        ))
      }
    </div>
  </Container>
</section>
