---
import { Image } from "astro:assets";
import Container from "@/components/ui/Container.astro";
import SectionTitle from "@/components/ui/SectionTitle.astro";
import { site } from "@/lib/content";
import { getSiteImage } from "@/lib/images";
---

<section class="bg-slate-100 py-14 sm:py-20">
  <Container>
    <SectionTitle
      title={site.clinicGallery.title}
      subtitle={site.clinicGallery.subtitle}
    />
    <div class="mt-10 grid gap-6 md:grid-cols-3">
      {
        site.clinicGallery.images.map((item) => (
          <figure class="overflow-hidden rounded-2xl border border-slate-200 bg-white shadow-sm">
            <Image
              src={getSiteImage(item.imageKey)}
              alt={item.alt}
              widths={[400, 640, 960]}
              sizes="(min-width: 768px) 33vw, 100vw"
              class="h-64 w-full object-cover"
            />
            {item.caption && (
              <figcaption class="px-4 py-3 text-sm text-slate-700">
                {item.caption}
              </figcaption>
            )}
          </figure>
        ))
      }
    </div>
  </Container>
</section>
