---
import { Picture } from "astro:assets";
import Section from "@/components/ui/Section.astro";
import Card from "@/components/ui/Card.astro";
import { site } from "@/lib/content";
import { getPictureProps } from "@/lib/images";
---

<Section variant="muted" className="py-12 md:py-16">
  <div class="grid grid-cols-1 gap-4 md:gap-6 lg:grid-cols-3">
    {
      site.clinicGallery.map((item) => (
        <Card
          surface="medium"
          padding="sm"
          class="fade-in-soft transition-all duration-200 hover:-translate-y-[1px] hover:shadow-[0_6px_24px_rgba(0,0,0,0.06)]"
        >
          <div class="aspect-[16/10] overflow-hidden rounded-card">
            <Picture
              {...getPictureProps(item.srcKey, item.alt, "gallery")}
              class="size-full object-cover"
            />
          </div>
          <p class="mt-3 text-secondary text-text-muted">{item.caption}</p>
        </Card>
      ))
    }
  </div>
</Section>
