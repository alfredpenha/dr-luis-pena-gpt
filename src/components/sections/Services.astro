---
import Container from "@/components/ui/Container.astro";
import SectionTitle from "@/components/ui/SectionTitle.astro";
import { site } from "@/lib/content";
---

<section class="bg-white py-14 sm:py-20" id="servicios">
  <Container>
    <SectionTitle
      title={site.services.title}
      subtitle={site.meta.description}
    />
    <div class="mt-10 grid gap-8 lg:grid-cols-2">
      <article class="rounded-2xl border border-slate-200 bg-slate-50 p-6">
        <h3 class="text-2xl font-semibold text-blue-900">
          {site.services.generalMedicine.title}
        </h3>
        <ul class="mt-5 space-y-3">
          {
            site.services.generalMedicine.items.map((item) => (
              <li class="rounded-lg bg-white px-4 py-3 text-sm text-slate-700 shadow-sm">
                {item}
              </li>
            ))
          }
        </ul>
        {
          site.services.generalMedicine.note && (
            <p class="mt-5 border-l-4 border-red-600 pl-3 text-sm text-slate-700">
              {site.services.generalMedicine.note}
            </p>
          )
        }
      </article>

      <article class="rounded-2xl border border-slate-200 bg-slate-50 p-6">
        <h3 class="text-2xl font-semibold text-blue-900">
          {site.services.ultrasound.title}
        </h3>
        <div class="mt-5 space-y-5">
          {
            site.services.ultrasound.categories.map((category) => (
              <section class="rounded-xl bg-white p-4 shadow-sm">
                <h4 class="text-base font-semibold text-slate-900">
                  {category.title}
                </h4>
                <ul class="mt-3 grid gap-2 sm:grid-cols-2">
                  {category.items.map((item) => (
                    <li class="text-sm text-slate-700">{item}</li>
                  ))}
                </ul>
              </section>
            ))
          }
        </div>
      </article>
    </div>
  </Container>
</section>
