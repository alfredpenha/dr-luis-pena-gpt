---
import { Image } from "astro:assets";
import logo from "@/assets/images/logo-transparente.png";
import Container from "@/components/ui/Container.astro";
import { site } from "@/lib/content";
import { withBase } from "@/lib/urls";
---

<footer class="border-t border-slate-200 bg-white">
  <Container class="py-10">
    <div class="grid gap-8 md:grid-cols-3">
      <div>
        <a
          href={withBase("/")}
          class="inline-flex items-center gap-3 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-primary-700"
          aria-label={site.brand.clinicName}
        >
          <Image
            src={logo}
            alt={site.brand.clinicName}
            widths={[56, 72]}
            class="size-14 object-contain"
          />
          <div>
            <p class="font-sans text-secondary font-semibold text-slate-700">
              {site.brand.clinicName}
            </p>
            <p class="font-sans text-xs text-slate-500">
              {site.brand.lockupText}
            </p>
          </div>
        </a>
        {
          site.footer.note && (
            <p class="mt-4 max-w-sm text-secondary text-slate-500">
              {site.footer.note}
            </p>
          )
        }
      </div>

      <div class="space-y-2 text-secondary text-slate-500">
        <a
          href={`tel:${site.contact.phone}`}
          data-track-event="click_call"
          data-track-source="footer"
          class="inline-flex min-h-11 items-center rounded-card text-slate-500 hover:text-primary-700 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-primary-700"
        >
          Tel: {site.contact.phone}
        </a>
        <a
          href={site.ctas.primaryHref}
          data-track-event="click_whatsapp"
          data-track-source="footer"
          class="inline-flex min-h-11 items-center rounded-card text-green-700 hover:text-green-800 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-green-700"
        >
          WhatsApp: {site.contact.whatsapp}
        </a>
        <p>
          {site.contact.city}, {site.contact.state}
        </p>
        <p>
          {site.hours.daysLabel} &middot; {site.hours.timeLabel}
        </p>
      </div>

      <nav
        class="flex flex-col gap-2 text-secondary"
        aria-label="Enlaces del footer"
      >
        {
          site.footer.quickLinks.map((link) => (
            <a
              href={withBase(link.href)}
              class="inline-flex min-h-11 items-center rounded-card text-slate-500 hover:text-primary-700 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-primary-700"
            >
              {link.label}
            </a>
          ))
        }
      </nav>
    </div>
  </Container>
</footer>
