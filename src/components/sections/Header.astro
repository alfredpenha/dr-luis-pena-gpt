---
import Container from "@/components/ui/Container.astro";
import Button from "@/components/ui/Button.astro";
import { site } from "@/lib/content";
import { withBase } from "@/lib/urls";
---

<header
  class="sticky top-0 z-40 border-b border-slate-200 bg-white/95 backdrop-blur"
>
  <Container class="py-4">
    <nav
      class="flex items-center justify-between gap-4"
      aria-label={site.meta.siteName}
    >
      <a
        href={withBase("/")}
        class="text-base font-semibold text-blue-900 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-700"
      >
        {site.meta.siteName}
      </a>
      <div class="flex items-center gap-4 sm:gap-6">
        {
          site.nav.items.map((item) => (
            <a
              href={withBase(item.href)}
              class="text-sm font-medium text-slate-700 transition hover:text-blue-800 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-700"
            >
              {item.label}
            </a>
          ))
        }
      </div>
      <Button
        href={site.ctas.primaryHref}
        variant="whatsapp"
        ariaLabel={site.ctas.primaryLabel}
        trackEvent="click_whatsapp"
        trackSource="header"
      >
        {site.ctas.primaryLabel}
      </Button>
    </nav>
  </Container>
</header>
