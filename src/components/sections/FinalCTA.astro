---
import Section from "@/components/ui/Section.astro";
import Button from "@/components/ui/Button.astro";
import { site } from "@/lib/content";
---

<Section variant="default" className="bg-muted py-12 md:py-16">
  <div
    class="rounded-3xl bg-primary px-6 py-7 text-primary-foreground md:px-10 md:py-10"
  >
    <h2
      class="font-serif text-h2 font-normal tracking-[0.2px] text-primary-foreground md:text-h2-desktop"
    >
      {site.finalCta.title}
    </h2>
    <p class="mt-4 max-w-2xl text-body text-primary-foreground">
      {site.finalCta.description}
    </p>
    <div class="mt-8">
      <Button
        href={site.finalCta.buttonHref}
        variant="whatsapp"
        ariaLabel={site.finalCta.buttonLabel}
      >
        {site.finalCta.buttonLabel}
      </Button>
    </div>
  </div>
</Section>
