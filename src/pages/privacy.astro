---
import Base from "@/layouts/Base.astro";
import Container from "@/components/ui/Container.astro";
import { site } from "@/lib/content";
---

<Base title={site.privacy.title} description={site.meta.description}>
  <Container class="py-16 sm:py-20">
    <h1
      class="font-serif text-h1 font-normal tracking-[0.2px] text-slate-900 md:text-h1-desktop"
    >
      {site.privacy.title}
    </h1>

    <div class="mt-10 space-y-7">
      {
        site.privacy.body.map((paragraph) => (
          <p class="rounded-2xl border border-slate-200 bg-white p-6 text-body shadow-sm">
            {paragraph}
          </p>
        ))
      }
    </div>
  </Container>
</Base>
