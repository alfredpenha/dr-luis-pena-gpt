---
import Base from "@/layouts/Base.astro";
import Container from "@/components/ui/Container.astro";
import { site } from "@/lib/site";
---

<Base title={site.privacy.title} description={site.seo.defaultDescription}>
  <Container class="py-16 sm:py-20">
    <h1 class="text-3xl font-bold tracking-tight text-slate-900 sm:text-4xl">
      {site.privacy.title}
    </h1>
    <p class="mt-3 text-sm text-slate-500">{site.privacy.updatedAt}</p>

    <div class="mt-10 space-y-8">
      {
        site.privacy.sections.map((section) => (
          <section class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
            <h2 class="text-xl font-semibold text-slate-900">
              {section.heading}
            </h2>
            <p class="mt-3 leading-relaxed text-slate-700">{section.body}</p>
          </section>
        ))
      }
    </div>
  </Container>
</Base>
