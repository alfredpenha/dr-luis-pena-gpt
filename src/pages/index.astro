---
import Base from "@/layouts/Base.astro";
import Hero from "@/components/sections/Hero.astro";
import Container from "@/components/ui/Container.astro";
import { site } from "@/lib/site";
---

<Base title={site.home.title} description={site.home.subtitle}>
  <Hero
    title={site.home.title}
    subtitle={site.home.subtitle}
    ctaLabel={site.home.ctaLabel}
    ctaHref={site.home.ctaHref}
  />
  <Container class="pb-20">
    <p class="text-sm text-slate-600">{site.brand.tagline}</p>
  </Container>
</Base>
